<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="initial-scale=1">
		<link rel="stylesheet" href="{{rootdirectory}}styles/hella.css">
		<link rel="stylesheet" href="{{rootdirectory}}styles/style.css">
		<link rel="stylesheet" href="{{rootdirectory}}styles/hella-style.css">
		<script type="text/javascript" src="{{rootdirectory}}js/activate_comments.js"></script>
		<title>badnoise - {{title}}</title>
	</head>
	<body>
		<a href="index.html">
      <div id="header">
	       <div id="logo"></div>
			</div>
		</a>
    <div class="grid">
      <div class="row" id="navbar">
        <div class="column six non-responsive no-margin">
					<a href="#">blog</a>
				</div>
				<div class="column six non-responsive">
					<a href="#">contact</a>
				</div>
      </div>
			<div class="content">
				<div class="row ">
					<div class="column">
							<h1>{{title}}</h1>
							<h6>{{date}}</h6>
							{{content}}
					</div>
				</div>
				<div class="row">
					<div class="column">
						<a href="javascript:showComments()" class="button" id="commentbutton">Activate comments</a>
						<div id="comments">
							<div id="disqus_thread"></div>
							<script>
								function showComments() {
									loadDisqusMalware();
									var disqus_config = function () {
										this.page.url = "badnoise.net";
										this.page.identifier = "{{date}}{{title}}"; };
									(function() {
										var d = document, s = d.createElement('script');
										s.src = 'https://badnoise-net.disqus.com/embed.js';
										s.setAttribute('data-timestamp', +new Date());
										(d.head || d.body).appendChild(s);})();
								}
							</script>
							<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
						</div>
					</div>
				</div>
      </div>
    </div>
		<div id="bottombar"></div>
	</body>
</html>
